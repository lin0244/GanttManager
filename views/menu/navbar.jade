header.navbar.navbar-inverse.navbar-custom(ng-controller="loginController")
    ul.nav.navbar-nav.navbar-left
        li
            a(href='/')
                span GanttManager
    ul.nav.navbar-nav.navbar-right(ng-show="AuthService.getAuth()")
        li
            a(href='#')
                span Utilisateur
        li
            a(ng-click="submitDisconnect()")
                span Déconnexion
    div.nav.navbar-nav.navbar-right(ng-show="!AuthService.getAuth()")
        .input-group.input-custom
                input.form-control(type='text', name='username', placeholder='Username', ng-model='username')
            span.help-block
        .input-group.input-custom
                input.form-control(type='password', name='password', placeholder='Password',ng-model='password')
            span.help-block                
        button.btn.btn-lg.btn-primary(type='submit', ng-click="submitAuth()") Login
        a.btn.btn-lg.btn-primary(data-toggle="modal", href="#myModal") Sign Up
        

    div#myModal.modal.fade(tabindex='-1', role='dialog')
        .modal-dialog
            .modal-content
              .modal-header
                button.close(type='button', data-dismiss='modal', aria-hidden='true') &times;
                h4.modal-title Créer un Compte
              .modal-body
                div
                  .omb_login
                      span.help-block
                        .row.omb_row-sm-offset-3
                          .col-xs-12.col-sm-6
                              .input-group
                                span.input-group-addon
                                  i.fa.fa-user
                                input.form-control(type='text', name='username', placeholder='Username', ng-model='username')
                              span.help-block
                              .input-group
                                span.input-group-addon
                                  i.fa.fa-lock
                                input.form-control(type='password', name='password', placeholder='Password',ng-model='password')
                              span.help-block
                              .input-group
                                span.input-group-addon
                                  i.fa.fa-envelope
                                input.form-control(type='text', name='email', placeholder='Email',ng-model='email')
                              span.help-block                
                        .row.omb_row-sm-offset-3.omb_loginOr
                          .col-xs-12.col-sm-6
                            hr.omb_hrOr
                            | Utiliser un réseau social ?
                        .row.omb_row-sm-offset-3.omb_socialButtons
                          .col-xs-4.col-sm-2
                            a.btn.btn-lg.btn-block.omb_btn-facebook(href='#')
                              i.fa.fa-facebook.visible-xs
                              span.hidden-xs Facebook
                          .col-xs-4.col-sm-2
                            a.btn.btn-lg.btn-block.omb_btn-twitter(href='#')
                              i.fa.fa-twitter.visible-xs
                              span.hidden-xs Twitter
                          .col-xs-4.col-sm-2
                            a.btn.btn-lg.btn-block.omb_btn-google(href='#')
                              i.fa.fa-google-plus.visible-xs
                              span.hidden-xs Google+
                
              .modal-footer
                button.btn.btn-default(type='button', data-dismiss='modal') Fermer
                button.btn.btn-default(type='button', data-dismiss='modal', ng-click='submitRegister()') Sign Up
